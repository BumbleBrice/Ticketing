{% extends 'base.html.twig' %}

{% block title %}Spectacle index{% endblock %}

{% block body %}
<div id="spectacleIndex" class=" mt-2 wrapper">
    <div class="row inner">
        {% for spectacle in spectacles %}
            <div class="col-lg-4">
                <div class="card mb-3 mr-2 ml-2">
                    <a href="{{ path('spectacle_show', {'id': spectacle.id}) }}">
                        <img class="card-img-top img-fluid w-100" src="{{ spectacle.Picture }}" alt="">
                    </a>
                    <div class="card-body">
                        <h3 class="card-title mb-1"><a href="{{ path('spectacle_show', {'id': spectacle.id}) }}">{{ spectacle.nom }}</a></h3>
                        <p class="card-text small text-white">{{ spectacle.description }}</p>
                        <div class="card-footer small text-white">Date : {{ spectacle.date ? spectacle.date|date('d-m-y') : '' }} Ã  {{ spectacle.date ? spectacle.date|date('H') : '' }}h{{ spectacle.date ? spectacle.date|date('i') : '' }}</div>
                        <a href="{{ path('spectacle_show', {'id': spectacle.id}) }}" class="">En savoir plus</a>
                    </div>
                </div>
            </div>
            {% else %}
            <div>Aucun spectacle en cours</div>
        {% endfor %}
    </div>
</div>
{% endblock %}