{% extends 'base.html.twig' %}

{% block title %}Spectacles{% endblock %}

{% block body %}

   <div class="container">
        <div id="SpectacleShow" class="row mt-5 mb-3">
            <div class="col-lg-4">
                <img class="img-thumbnail" src="{{ spectacle.Picture }}">
            </div>
            <div class="col-lg-8 card text-white">
                <h3 class="mt-3 text-left ">{{ spectacle.nom }}</h3>
                <div>Le {{ spectacle.date ? spectacle.date|date('d-m-y') : '' }} Ã  {{ spectacle.date ? spectacle.date|date('H') : '' }}h{{ spectacle.date ? spectacle.date|date('i') : '' }}
                </div>
                <p class="text-white">{{ spectacle.description }}</p>
                <p class="text-white">Il reste actuellement {{ spectacle.places}} places disponibles</p>
                
            </div>
        </div>
        <iframe src="https://www.weezevent.com/widget_billeterie.php?id_evenement={{ spectacle.weezeventId }}&amp;lg_billetterie=1&amp;code=27455&amp;resize=1&amp;width_auto=1&amp;color_primary=252525&amp;v=2" resize="1" hidepoweredby="0" scrolling="auto" style="box-sizing: initial;" width="100%" height="480px" frameborder="0"></iframe>
   </div>


{% endblock %}