{% extends 'base.html.twig' %}

{% block title %}ContactPro index{% endblock %}

{% block body %}
    <h1>ContactPro index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Telephone</th>
                <th>Organisme</th>
                <th>Adresse</th>
                <th>Vousetes</th>
                <th>Newsletter</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for contact_pro in contact_pros %}
            <tr>
                <td>{{ contact_pro.id }}</td>
                <td>{{ contact_pro.nom }}</td>
                <td>{{ contact_pro.prenom }}</td>
                <td>{{ contact_pro.email }}</td>
                <td>{{ contact_pro.telephone }}</td>
                <td>{{ contact_pro.organisme }}</td>
                <td>{{ contact_pro.adresse }}</td>
                <td>{{ contact_pro.vousetes ? contact_pro.vousetes|join(', ') : '' }}</td>
                <td>{{ contact_pro.newsletter ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('contact_pro_show', {'id': contact_pro.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('contact_pro_new') }}">Create new</a>
{% endblock %}