{% extends 'base.html.twig' %}

{% block title %}ContactPro index{% endblock %}

{% block body %}
    <div id="contact" class="wrapper backOffice">
       <div class="innerBack">
            <h3 class="text-white text-center">Liste des message de professionnels</h3>
                
            <table class="table table-striped table-dark">
                <thead>
                    <tr>
                        <th>Nom et prenom</th>
                        <th>Email</th>
                        <th>Telephone</th>
                        <th>Organisme</th>
                        <th>Qui est-ce?</th>
                    </tr>
                </thead>
                <tbody>
                {% for contact_pro in contact_pros %}
                    <tr>
                        <td><a class="btn" href="{{ path('contact_pro_show', {'id': contact_pro.id}) }}">{{ contact_pro.nom }} {{ contact_pro.prenom }}</a></td>
                        <td><a class="btn" href="{{ path('contact_pro_show', {'id': contact_pro.id}) }}">{{ contact_pro.email }}</a></td>
                        <td><a class="btn" href="{{ path('contact_pro_show', {'id': contact_pro.id}) }}">{{ contact_pro.telephone }}</a></td>
                        <td><a class="btn" href="{{ path('contact_pro_show', {'id': contact_pro.id}) }}">{{ contact_pro.organisme }}</a></td>
                        <td><a class="btn" href="{{ path('contact_pro_show', {'id': contact_pro.id}) }}">{{ contact_pro.vousetes ? contact_pro.vousetes|join(', ') : '' }}</a></td>
                        <td>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
       </div>
    </div>


{% endblock %}