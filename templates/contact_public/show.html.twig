{% extends 'base.html.twig' %}

{% block title %}ContactPublic{% endblock %}

{% block body %}
    <div id="contact" class="container">
        <h4>Message de : {{ contact_public.nom }} {{ contact_public.prenom }}</h4>
    </div>

    <table>
        <tbody>
            <tr>
                <th>Email</th>
                <td> : {{ contact_public.email }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td> : {{ contact_public.telephone }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td> : {{ contact_public.sujet }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td> : {{ contact_public.message }}</td>
            </tr>
            <tr>
                <th>Envoyer le</th>
                <td> : {{ contact_public.date ? contact_public.date|date('d-m-y') : '' }} Ã  {{ contact_public.date ? contact_public.date|date('H') : '' }}h{{ contact_public.date ? contact_public.date|date('i') : '' }}</td>
            </tr>
            <tr>
                <th>Newsletter</th>
                <td> : {{ contact_public.newsletter ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
            <div class="col">
                <a class="btn btn-success" href="{{ path('contact_public_index') }}">Retour liste des message</a>
            </div>
            <div class="col">
                {{ include('contact_public/_delete_form.html.twig') }}
            </div>
        </div>



{% endblock %}