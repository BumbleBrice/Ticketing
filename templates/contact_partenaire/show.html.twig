{% extends 'base.html.twig' %}

{% block title %}ContactPartenaire{% endblock %}

{% block body %}
    <div id="contact">
        <h4>Message de : {{ contact_partenaire.nom }} {{ contact_partenaire.prenom }}</h4>
        <table>
            <tbody>
                <tr>
                    <th>Telephone</th>
                    <td> : {{ contact_partenaire.telephone }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td> : {{ contact_partenaire.email }}</td>
                </tr>
                <tr>
                    <th>Sujet</th>
                    <td> : {{ contact_partenaire.sujet ? contact_partenaire.sujet|join(', ') : '' }}</td>
                </tr>
                <tr>
                    <th>Message</th>
                    <td> : {{ contact_partenaire.message }}</td>
                </tr>
                <tr>
                    <th>Newsletter</th>
                    <td> : {{ contact_partenaire.newsletter ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
        <div class="row">
            <div class="col">
                <a class="btn btn-success" href="{{ path('contact_partenaire_index') }}">Retour liste des message</a>
            </div>
            <div class="col">
                {{ include('contact_partenaire/_delete_form.html.twig') }}
            </div>
        </div>
    </div>

{% endblock %}