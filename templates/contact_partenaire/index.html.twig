{% extends 'base.html.twig' %}

{% block title %}ContactPartenaire index{% endblock %}

{% block body %}
    <div class="container">
        <h3>Liste de messages des partenaires</h3>
        {% for contact_partenaire in contact_partenaires %}
        <div class="list-group bg-dark">
          <a href="{{ path('contact_partenaire_show', {'id': contact_partenaire.id}) }}" class="list-group-item list-group-item-success flex-column align-items-start">
            <div class="row">
                <div class="col-md-5"><h5 class="mb-1">{{ contact_partenaire.nom }} {{ contact_partenaire.prenom }}</h5></div>
                <div class="col-md-2">{{ contact_partenaire.sujet ? contact_partenaire.sujet|join(', ') : '' }}</div>
                <div class="col-md-3">{{ contact_partenaire.email }}</div>
                <div class="col-md-2">{{ contact_partenaire.telephone }}</div>
            </div>
          </a>
        </div>
        {% else %}
            <div>Pas de message pour l'instant</div>
        {% endfor %}

    </div>
{% endblock %}